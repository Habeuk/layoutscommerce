{% if content %}
	<div {{attributes.addClass(['il-menu-card','aos-init','no-gutters','row']).setAttribute('datas-aos','fade-up').setAttribute('data-aos-duration','600').setAttribute('data-aos-delay','200')}}>
		{% if content.images %}
			<div {{region_attributes.images.addClass(['ilm-img','col-sm-6'])}}>
				{{content.images}}
			</div>
		{% endif %}
		<div class="ilm-content col-sm-6">
			{% if content.title %}
				<h4 {{region_attributes.title.addClass(['ilc-title'])}}>
					{{ content.title }}
				</h4>
			{% endif %}
			{% if content.price %}
				<h5 {{region_attributes.price.addClass(['ilc-price'])}}>
					{{ content.price }}
				</h5>
			{% endif %}

			<div class="desc-content">
				<div class="ilc-desc">
					{% if content.menu_desc_title %}
						<h6 {{region_attributes.menu_desc_title.addClass(['ilc-desc__title'])}}>
							{{content.menu_desc_title}}
						</h6>
					{% endif %}
					{% if content.menu_desc_content %}
						<div {{region_attributes.menu_desc_content.addClass(['ilc-ul'])}}>
							{{content.menu_desc_content}}
						</div>
					{% endif %}

					{% if content.desc_img_title %}
						<h6 {{region_attributes.desc_img_title.addClass(['ilc-desc__title'])}}>
							{{content.desc_img_title}}
						</h6>
					{% endif %}
					{% if content.desc_img_content %}
						<div {{region_attributes.desc_img_content.addClass(['ilc-img-illustration'])}}>
							{{content.desc_img_content}}
						</div>
					{% endif %}
				</div>
			</div>
			{% if content.add_to_cart|has_value %}
				<div class="il-action-card">
					<div class="bouton-quantity-card">
						<button class="ilac-btn" data-type="minus">
							<svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 448 512">
								<path d="M400 288h-352c-17.69 0-32-14.32-32-32.01s14.31-31.99 32-31.99h352c17.69 0 32 14.3 32 31.99S417.7 288 400 288z"/>
							</svg>
						</button>
						<input type="number" value="1" min="0" data-input="quantity">
						<button class="ilac-btn" data-type="plus">
							<svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 448 512">
								<path d="M432 256c0 17.69-14.33 32.01-32 32.01H256v144c0 17.69-14.33 31.99-32 31.99s-32-14.3-32-31.99v-144H48c-17.67 0-32-14.32-32-32.01s14.33-31.99 32-31.99H192v-144c0-17.69 14.33-32.01 32-32.01s32 14.32 32 32.01v144h144C417.7 224 432 238.3 432 256z"/>
							</svg>
						</button>
					</div>
					<div class="card-btn card-btn--sm card-btn--scale-up">
						{{content.has_value}}
					</div>
				</div>
			{% endif %}
		</div>
	</div>
{% endif %}